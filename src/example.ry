class Example:
    """Пример класса для демонстрации документации API.

    :param name: Имя пользователя
    :type name: str
    """

    def __init__(self, name):
        """Инициализация примера."""
        self.name = name

    def greet(self):
        """Возвращает приветствие."""
        return f"Привет, {self.name}!"
